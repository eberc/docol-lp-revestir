{
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "@",
            "src"
          ],
          [
            "@assets",
            "src/assets/"
          ],
          [
            "@components",
            "src/components"
          ],
          [
            "@sections",
            "src/sections"
          ],
          [
            "@styles",
            "src/styles"
          ]
        ],
        "extensions": [".vue", ".scss", ".js"]
      }
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended"
  ],
  "rules": {
    "import/no-unresolved": "off",
    "max-len": "off",
    "no-unused-vars": "off",
    "linebreak-style": [
      0,
      "error",
      "windows"
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}